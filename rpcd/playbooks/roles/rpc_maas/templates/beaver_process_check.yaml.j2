type: agent.plugin
label: "beaver_process_check--{{ ansible_hostname }}"
disabled    : false
period      : "{{ maas_check_period }}"
timeout     : "{{ maas_check_timeout }}"
details     :
    file    : process_check.py
    args    : [{% if inventory_hostname in groups['all_containers'] %} "-c", "{{ inventory_hostname }}", {% else %}{% endif %}"{{ beaver_process_names|join(",") }}"]
alarms      :
{% for process in beaver_process_names %}
    {{ process }}_process_status:
        label                   : {{ process }}_process_status--{{ ansible_hostname }}
        notification_plan_id    : "{{ maas_notification_plan }}"
        disabled                : "{{ ((process+'_process_status--'+ansible_hostname) | match(maas_excluded_alarms_regex)) | ternary('true', 'false') }}"
        criteria                : |
            :set consecutiveCount={{ maas_alarm_local_consecutive_count }}
            if (metric["{{ process }}_process_status"] != 1 ) {
                return new AlarmStatus(CRITICAL, "Beaver process {{ process }} not running on {{ ansible_hostname }}");
            }
{% endfor %}
