type              : remote.http
label             : lb_api_check_nova
disabled          : false
period            : "{{ maas_check_period }}"
timeout           : "{{ maas_check_timeout }}"
target-alias      : "{{ maas_target_alias }}"
details           :
    url           : "{{ maas_nova_scheme | default(maas_scheme)}}://{{ ip_address }}:8774"
alarms            :
    lb_api_alarm_nova       :
        notification-plan   : "{{ maas_notification_plan }}"
        label               : lb_api_alarm_nova
        criteria            : |
            consecutiveCount={{ maas_alarm_local_consecutive_count }}
            if (metric['code'] != '200') {
                return new AlarmStatus(CRITICAL, 'API unavailable.');
            }
